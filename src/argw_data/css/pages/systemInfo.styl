// 系统信息
.system-info-container {
  .title {
    line-height 30px
    padding-left 15px
    background-color $tbgColor
    border-bottom 1px solid $hoverColor2
    color #666
  }
  .main {
    margin 20px 0
    .content {
      width 600px
      margin 0 auto
      > p {
        line-height 36px
        clearFloat()
        > label {
          float left
          display inline-block
          width 150px
          padding 0 5px
          text-align right
          vertical-align top
        }
        > span {
          float left
          width 440px
          lineTextHide()
        }
        .select-file-box {
          >b {
            float left
            line-height 22px
            height 22px
            border 1px solid $hoverColor2
            padding 0 10px
            width 220px;
            overflow hidden
            text-overflow ellipsis
            white-space nowrap
            margin-top 5.5px
            margin-right 12px
            font-weight 500
            border-radius 2px
          }
          >a {
            margin-top 4px
            float left
            width 100px
            height 26px
            box-sizing border-box
            color #fff
            background $bgColor
            position relative
            text-align center
            line-height 26px
            font-size 13px
            border-radius 3px
            &:hover {
              background $hoverColor
            }
            >input {
              width 100%
              height 100%
              opacity 0
              position absolute
              top 0
              left 0
            }
          }
        }
      }
    }
  }
}