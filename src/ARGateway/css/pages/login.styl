// 登录页
.login-container {
  color #666
  position absolute
  width 100%
  top 50%
  margin-top -(254+40+40)px
  .top-box {
    height 80px
    .logo {
      //width 133px
      //height 40px
      margin-left 10%
      margin-top 15px
    }
    .lang-select {
      float right
      margin-right 2.5%
      margin-top 25px
      width 150px
      height 30px
      line-height 28px
      box-sizing border-box
      border 1px solid $hoverColor2
      position relative
      text-align left
      cursor pointer
      border-radius 4px
      .select-icon {
        position absolute
        top 3.5px
        right 6px
        z-index -1
      }
      .lang-result {
        margin 0 10px;
        display block
      }
      .lang-option-list {
        width 100%
        border 1px solid $hoverColor2
        position absolute
        top 27px
        left -1px
        background #fff
        display none
        z-index 1
        .lang-option-item {
          line-height 30px
          padding 0 10px;
          &:hover {
            background #eee
          }
          &:not(:last-child) {
            border-bottom 1px solid $hoverColor2
          }

        }
      }
    }
  }
  .main-box {
    position relative
    height 508px
    background #80bef8
    background-image linear-gradient(to bottom, #5fa5f4, #8fc9fa)
    .bg {
      position absolute
      width 100%
      height 100%
      top 0
      left 0
      overflow hidden
      z-index 0
      img {
        height 100%
      }
    }
    .main {
      position relative
      z-index 1
      width 360px
      height 350px
      background-color #fff
      float right
      margin-top 74px
      margin-right 12%
      border-radius 5px
      box-shadow: 2px 2px 5px #899ead, -2px 2px 5px #899ead;
      box-sizing border-box
      padding 0 30px
      .title {
        font-size 24px
        text-align center
        padding-top 30px
        padding-bottom 15px
        border-bottom 1px solid $hoverColor2
        margin-bottom 25px
      }
      .input-box {
        height 42px
        position relative
        &.username-box {
          margin-bottom 20px
        }
        i {
          position absolute
          width 14px
          height 14px
          top 14px
          left 14px
          &.username-icon {
            background url("../img/login/user.png") no-repeat
          }
          &.password-icon {
            background url("../img/login/pwd.png") no-repeat
            background-position 1px 0px;
            height 15px
          }
        }
        input {
          width 100%
          height 100%
          box-sizing border-box
          border 1px solid $hoverColor2
          border-radius 4px
          padding-left 40px
          padding-right 20px
          transition all .123s linear
          line-height 40px
          &:focus {
            border-color #92ccf6;
            box-shadow: 2px 2px 5px $hoverColor2, -2px 2px 5px $hoverColor2;
          }
        }
      }
      .remember-box {
        margin-top 5px
        display inline-block
        cursor pointer
        color #777
        margin-left 2px
        &.active {
          .checkbox {
            border-color transparent
            >i {
              display inline-block
            }
          }
        }
        .checkbox {
          color $color
          border 1px solid #aaa;
          width 12px
          height 12px
          display inline-block
          position relative
          top 2px
          >i {
            display none
            font-size 16px
            position absolute
            top -2px
            left -1px
          }
        }
      }
      .login-box {
        margin-top 25px
        .login-btn {
          display block
          width 100%
          height 42px
          line-height 40px
          text-align center
          font-size 16px
          color #ffffff
          background-color $color
          background-image linear-gradient(to bottom, #22a8fd, #1265c9)
          border-radius 4px
          cursor pointer
          letter-spacing 5px
          border 0
          outline 0
          &:active {
            background $hoverColor
          }
        }
      }
    }
  }
  .bottom-box {
    height 80px
    p {
      font-size 12px
      text-align center
      line-height 80px
    }
  }
}