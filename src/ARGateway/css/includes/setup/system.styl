// 系统设置
.setup-box {
  .setup-nav {
    line-height 34px
    height 34px
    border-bottom 1px solid #cee0f0
    background #f7faff
    >a {
      display inline-block
      padding 0 15px
      margin 0 15px
      position relative
      cursor pointer
      >i {
        position absolute
        width 100%
        height 3px
        background transparent
        bottom -1.5px
        left 0px
      }
      &.active {
        color #109af9
        font-weight bold
        >i {
          background #109af9
        }
      }
    }
  }
  .setup-main {
    .base-main {
      padding-top 20px
      .item {
        margin-bottom 15px
        label {
          width 150px
          text-align right
          display inline-block
        }
        input {
          width 200px
          height 30px
          line-height 28px
          box-sizing border-box
          border-radius 4px
          border 1px solid $hoverColor2
          margin-right 8px
          padding 0 10px
          &.x2 {
            width 400px
          }
        }
        .btn {
          btnFn(30px)
          margin-top 10px
        }
      }
    }

    .time-main {
      padding 10px
      label {
        width 120px
        display inline-block
        text-align right
      }
      .title {
        font-size 16px
        color #333
        margin-top 5px
        margin-bottom 20px
        padding-left 10px
        >b {
          display inline-block
          width 3px
          height 15px
          background #0394f9
          margin-right 10px
          position relative
          top 2px
        }
      }
      .item {
        margin-bottom 15px
        input {
          width 200px
          height 30px
          line-height 28px
          box-sizing border-box
          border-radius 4px
          border 1px solid $hoverColor2
          margin-right 8px
          padding 0 10px
          &.x2 {
            width 400px
          }
          &.readonly {
            background #f7faff
            color #a5b3c7
          }
        }
        .from-btn {
          margin-top 20px
        }
        &.set-time-item {
          height 30px
          position relative
        }
        .time-input {
          display inline-block
          position relative
          input {
            cursor pointer
            position relative
            background transparent
            z-index 1
          }
          .time-icon {
            cursor pointer
            z-index 0
            position absolute
            width 18px
            height 18px
            right 15px
            top 5px
            background url("../img/systemSetup/day.png")
          }
        }
      }
      .radio {
        display inline-block
        cursor pointer
        margin-bottom 20px
        margin-left 20px
        b {
          display inline-block
          width 14px
          height 14px
          border 1px solid #4897f6
          border-radius 50%
          position relative
          top 3px
          i {
            position absolute
            width 8px
            height 8px
            border-radius 50%
            top 3px
            left 3px
          }
        }
        &.active {
          b {
            background #d7edff
            i {
              background #4897f6
            }
          }
        }
      }
      .timezone {
        border-bottom 1px dashed #dae6f9
        padding-top 10px
        padding-bottom 20px
        .from-select {
          width 400px
          .option-list {
            height 266px
            overflow-y auto
          }
        }
      }
      .ntp, .hand {
        border-bottom 1px dashed #dae6f9
        padding 10px 0
      }
    }
  }
}


