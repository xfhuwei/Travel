# http://editorconfig.org 控制代码风格

root = true

# 对所有文件生效
[*]
# 文件编码。可选值
charset = utf-8
# 缩进类型。可选值
indent_style = space
# 缩进数量。可选值
indent_size = 2
# 换行符格式。可选值
end_of_line = lf
# 是否在文件的最后插入一个空行。可选值
insert_final_newline = true
# 是否删除行尾的空格。可选值
trim_trailing_whitespace = true

# 对后缀名为 md 的文件生效
[*.md]
trim_trailing_whitespace = false
